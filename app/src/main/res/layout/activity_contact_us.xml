<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wallymisr.flowersapp.ContactUsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#4C0B5F"
        android:id="@+id/lay1">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/user"
            android:id="@+id/profile"
            android:layout_marginTop="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="بابكو"
            android:textSize="50dp"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/lay2"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_below="@+id/lay1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/phone"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/phone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:text="01112356904"
            android:textSize="20dp"
            android:textColor="#000000"
            android:id="@+id/mob"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            android:layout_below="@id/mob"
            android:text="Mobile"
            android:textSize="20dp"
            android:textColor="#000000"
            android:id="@+id/mobile"/>

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_below="@id/mobile"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:id="@+id/line"/>


        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/mail"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/line"
            android:id="@+id/mail"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:text="example@hotmail.com"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_below="@+id/line"
            android:id="@+id/yahoo"/>

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_below="@id/yahoo"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:id="@+id/line2"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/location"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/line2"
            android:id="@+id/locationimg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="100dp"
            android:text="10 St, San Fransisco,CA"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_below="@+id/line2"
            android:id="@+id/location"/>

    </RelativeLayout>

    <android.support.v7.widget.ActionMenuView
        android:id="@+id/bottom_toolbar"
        android:layout_below="@+id/lay2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="#D3CFCF">
    </android.support.v7.widget.ActionMenuView>


</RelativeLayout>
